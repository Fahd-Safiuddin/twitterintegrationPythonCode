import tweepy

def post_to_twitter(tweet_content):
    # Twitter API credentials - #I will delete/ the key below is garbled all this so no use re-using it :) - Its here so you can easily identify it when you see it on the Twitter platform
    API_KEY = "6AWEu4SdxC6UVz12xkgKIbubq"
    API_SECRET = "KeCz0sVn1mG0rIwTeec0lG7J355W71roBgktiJG15pZe4VIi6dEE" 
    ACCESS_TOKEN = "1835158359240314880-TowRWgTiEU8WCu1SSerQqIZg9UmRMNpm"
    ACCESS_TOKEN_SECRET = "VPlYV3xbUE9taxGPjCSgDa2JR6cNs7YmHSSM2ha36pmihKx"

    # Authenticate with Twitter API
    try:
        auth = tweepy.OAuthHandler(API_KEY, API_SECRET)
        auth.set_access_token(ACCESS_TOKEN, ACCESS_TOKEN_SECRET)
        api = tweepy.API(auth)
        print("Authentication OK")
    except Exception as e:
        print(f"Error during authentication: {e}")
        return  # Exit the function if authentication fails

    # Post the tweet
    try:
        api.update_status(tweet_content)
        print("Tweet posted successfully!")
    except tweepy.TweepyException as e:  # Use Tweepy's updated exception class
        print(f"Twitter API Error: {e}")
    except Exception as e:
        print(f"Error posting to Twitter: {e}")

# Call the function with your tweet content
post_to_twitter("Testing Twitter API integration!")
