from mastodon import Mastodon

# Initialize the Mastodon API
mastodon = Mastodon(
    access_token="xxx",  # Replace with your access token :) 
    api_base_url="https://mastodon.social"  # Replaced with your Mastodon instance URL check yours on the address bar
)

# Post a status
try:
    mastodon.status_post("Hello Mastodon! This is third test post from the API.")
    print("Post successful!")
except Exception as e:
    print(f"Error posting to Mastodon: {e}")
